<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Grass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2E7D32"/> <!-- dark green grass -->
            <corners android:radius="14dp"/>
        </shape>
    </item>

    <!-- Track lane -->
    <item
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#5C4033"/> <!-- brown dirt track -->
            <corners android:radius="10dp"/>
            <stroke android:width="3dp" android:color="#FFFFFF"/> <!-- white lane boundary -->
        </shape>
    </item>

    <!-- Center dashed line -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:gravity="center_vertical">
        <shape android:shape="line">
            <stroke
                android:color="#FFFFFF"
                android:width="2dp"
                android:dashWidth="12dp"
                android:dashGap="8dp"/>
        </shape>
    </item>

</layer-list>
