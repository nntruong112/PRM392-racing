<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF8C00"
            android:endColor="#FFD700"
            android:angle="90" />
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- subtle white outline -->
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#DAA520"
            android:endColor="#FFD700"
            android:angle="90" />
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="@color/black" /> <!-- subtle white outline -->
        </shape>
    </item>
</selector>
