<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!-- Hiển thị số dư -->

    <!-- Nút nạp tiền -->

    <!-- Ngựa 1 -->

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="70dp"
        android:text="999$"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvBalance"
        android:layout_marginStart="-229dp"
        android:layout_marginTop="-14dp"
        android:layout_toEndOf="@id/tvBalance"
        android:text="Nạp tiền" />

    <LinearLayout
        android:id="@+id/rowHorse1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvBalance"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgHorse1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngựa 1"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/edtHorse1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Bet"
            android:inputType="number"
            android:layout_marginStart="10dp"/>

        <CheckBox
            android:id="@+id/cbHorse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvTile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tỉ lệ cược"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Ngựa 2 -->
    <LinearLayout
        android:id="@+id/rowHorse2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rowHorse1"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgHorse2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngựa 2"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/edtHorse2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Bet"
            android:inputType="number"
            android:layout_marginStart="10dp"/>

        <CheckBox
            android:id="@+id/cbHorse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvTile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tỉ lệ cược"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Ngựa 3 -->
    <LinearLayout
        android:id="@+id/rowHorse3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rowHorse2"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgHorse3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngựa 3"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/edtHorse3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Bet"
            android:inputType="number"
            android:layout_marginStart="10dp"/>

        <CheckBox
            android:id="@+id/cbHorse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvTile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tỉ lệ cược"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- Nút Play -->
    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_below="@id/rowHorse3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"/>
</RelativeLayout>

