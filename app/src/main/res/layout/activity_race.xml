<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_race"
    android:padding="12dp">

    <!-- Countdown Overlay -->
    <TextView
        android:id="@+id/countdownText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="64sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!-- 🏁 Scoreboard (top-left) -->
    <LinearLayout
        android:id="@+id/horseInfoBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/board_bg"
        android:padding="8dp"
        android:elevation="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/tvHorse1Board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haru Urara | x2.5 | 0$"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvHorse2Board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Week | x3.0 | 0$"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvHorse3Board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symboli Rudolf | x4.0 | 0$"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Horse 1 -->
    <RelativeLayout
        android:id="@+id/horse1Container"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp">

        <SeekBar
            android:id="@+id/horse1"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/track_bg"
            android:thumb="@android:color/transparent" />

        <ImageView
            android:id="@+id/horse1Gif"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/horse1" />

        <TextView
            android:id="@+id/tvHorse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haru Urara"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:layout_above="@id/horse1Gif"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <!-- Horse 2 -->
    <RelativeLayout
        android:id="@+id/horse2Container"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="230dp">

        <SeekBar
            android:id="@+id/horse2"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/track_bg"
            android:thumb="@android:color/transparent" />

        <ImageView
            android:id="@+id/horse2Gif"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/horse2" />

        <TextView
            android:id="@+id/tvHorse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Special Week"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:layout_above="@id/horse2Gif"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <!-- Horse 3 -->
    <RelativeLayout
        android:id="@+id/horse3Container"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="290dp">

        <SeekBar
            android:id="@+id/horse3"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/track_bg"
            android:thumb="@android:color/transparent" />

        <ImageView
            android:id="@+id/horse3Gif"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/horse3" />

        <TextView
            android:id="@+id/tvHorse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symboli Rudolf"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:layout_above="@id/horse3Gif"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_margin="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_confirm"
            android:paddingHorizontal="24dp"
            android:text="Start"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_cancel"
            android:paddingHorizontal="24dp"
            android:text="Restart"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnQuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_cancel"
            android:paddingHorizontal="24dp"
            android:text="Back to Bet"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
