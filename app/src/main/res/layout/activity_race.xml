<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Ngựa 1 -->
    <TextView
        android:id="@+id/tvHorse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngựa 1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horse1"/>

    <SeekBar
        android:id="@+id/horse1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:max="100"
        android:progress="0"
        android:thumb="@drawable/ic_launcher_foreground"
        android:thumbTint="@android:color/holo_blue_dark"
        android:thumbOffset="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvHorse1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Ngựa 2 -->
    <TextView
        android:id="@+id/tvHorse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngựa 2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvHorse1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horse2"
        android:layout_marginTop="24dp"/>

    <SeekBar
        android:id="@+id/horse2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:max="100"
        android:progress="0"
        android:thumb="@drawable/ic_launcher_foreground"
        android:thumbTint="@android:color/holo_green_dark"
        android:thumbOffset="24dp"
        app:layout_constraintTop_toBottomOf="@id/horse1"
        app:layout_constraintStart_toEndOf="@id/tvHorse2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Ngựa 3 -->
    <TextView
        android:id="@+id/tvHorse3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngựa 3"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvHorse2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horse3"
        android:layout_marginTop="24dp"/>

    <SeekBar
        android:id="@+id/horse3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:max="100"
        android:progress="0"
        android:thumb="@drawable/ic_launcher_foreground"
        android:thumbTint="@android:color/holo_red_dark"
        android:thumbOffset="24dp"
        app:layout_constraintTop_toBottomOf="@id/horse2"
        app:layout_constraintStart_toEndOf="@id/tvHorse3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Button Start -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Race"
        app:layout_constraintTop_toBottomOf="@id/horse3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
